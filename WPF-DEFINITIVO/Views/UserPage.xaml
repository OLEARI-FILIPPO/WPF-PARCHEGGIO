                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       Text="&#xE7EE;"  
                                       FontSize="130" 
                                       FontFamily="Segoe MDL2 Assets" />
                        </Border>

                        <hc1:Card.Footer>
                            <StackPanel Margin="40" Width="160">
                                <Button Content="LOGOUT"
                                        Grid.Row="2"
                                        Grid.ColumnSpan="2" 
                                        Width="150" 
                                        Height="50" 
                                        FontSize="20" 
                                        Click="Button_Click"
                                        Background="#8DA4E8"
                                        BorderBrush="#8DA4E8"/>
                            </StackPanel>
                        </hc1:Card.Footer>

                    </hc1:Card>

                </StackPanel>

                <Border Grid.Column="1"  Effect="{DynamicResource EffectShadow4}" CornerRadius="5" Background="#96BEEA" HorizontalAlignment="Center" VerticalAlignment="Center" Height="441" Width="415" >

                    <StackPanel Orientation="Vertical" >
                            
                        


