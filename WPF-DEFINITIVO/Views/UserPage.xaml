                             HorizontalAlignment="Center" 
                             Height="385">

                        <Border  CornerRadius="4,4,0,0" 
                                 Height="242" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" 
                                 Width="230">

