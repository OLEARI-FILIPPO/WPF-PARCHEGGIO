<Window x:Class="WPF_DEFINITIVO.Views.EntraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_DEFINITIVO.Views" xmlns:viewmodels="clr-namespace:WPF_DEFINITIVO.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:EntraWindowViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Metodo entra veicolo" MaxHeight="650"
        MaxWidth="700" Width="610" Height="560">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="237*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>

        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="Images/wave.png"/>
        </Grid.Background>

        <TextBlock
                    Style="{StaticResource PageTitleStyle}"
                    Margin="24,0,0,0"
                    FontSize="18" Grid.ColumnSpan="2"
                   >Aggiungi Parcheggio</TextBlock>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="24,0,0,0" Grid.ColumnSpan="2">

            <TextBlock Text="Surname" 
                       VerticalAlignment="Center" FontSize="16"/>
            <TextBox Text="{Binding Surname}"
                     Width="406" Height="60" 
                     Margin="54,0,0,0" FontSize="16" 
                     VerticalAlignment="Center"></TextBox>

        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal"  
                    Margin="24,0,0,0" Grid.ColumnSpan="2">

            <TextBlock Text="Nome" 
                       VerticalAlignment="Center" FontSize="16"/>
            <TextBox Width="406" Height="60" 
                     Margin="56,0,0,0" FontSize="16" 
                     VerticalAlignment="Center"></TextBox>

        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal"  
                    Margin="24,0,0,0" Grid.ColumnSpan="2">

            <TextBlock Text="Date Of birth" 
                       VerticalAlignment="Center" FontSize="16"/>
            <DatePicker Width="406" Height="60" 
                        Margin="30,0,0,0" FontSize="16" 
                        VerticalAlignment="Center"></DatePicker>

        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" 
                    Margin="24,0,0,0" Grid.ColumnSpan="2">

            <TextBlock Text="Targa" 
                       VerticalAlignment="Center" 
                       FontSize="16"></TextBlock>
            <TextBox Width="406" Height="60" 
                     Margin="85, 0, 0, 0" 
                     FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>


        <StackPanel Grid.Row="5"  Grid.Column="1"
                    Orientation="Horizontal">
            <Button 
                    Name="entra"
                    FontSize="14" 
                    Background="LightGreen" 
                    Height="48" Margin="15 0 0 0"
                    Width="130" Click="entra_Click">AGGIUNGI</Button>

            <Button
                    FontSize="14" 
                    Background="IndianRed" 
                    Height="48" Margin="50 0 0 0"
                    Width="130" 
                    Click="Button_Click">ANNULLA</Button>
        </StackPanel>

        

    </Grid>
</Window>
